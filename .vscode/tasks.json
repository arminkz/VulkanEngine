{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cmake",
            "label": "CMake: build",
            "command": "build",
            "targets": [
                "ALL_BUILD"
            ],
            "group": "build",
            "problemMatcher": [],
            "detail": "CMake template build task"
        },
        {
            "type": "shell",
            "label": "build",
            "command": "cmake",
            "args": [
              "--build", "build", // adjust this if your build directory is named differently
              "--config", "Debug" // Optional, needed if you're using multi-config generators like Visual Studio
            ],
            "group": {
              "kind": "build",
              "isDefault": true 
            },
            "problemMatcher": ["$msCompile"] // $msCompile is for MSVC, $gcc for GCC
        }
    ],
    "version": "2.0.0"
}